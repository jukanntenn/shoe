{
  "name": "shoe",
  "version": "0.0.1",
  "description": "",
  "main": "A lightweight, modern, pure JavaScript library for building interactive components.",
  "scripts": {
    "start": "npm-run-all --parallel --aggregate-output watch docs-serve",
    "bundlewatch": "bundlewatch --config .bundlewatch.config.json",
    "docs-serve": "hugo server --port 9001 --disableFastRender",
    "visual-test": "tailwindcss -c ./tests/visual/tailwind.config.js -i ./tests/visual/input.css -o ./tests/visual/visual.css --watch",
    "compile": "npm-run-all --aggregate-output --parallel compile-*",
    "compile-standalone": "rollup --config --environment BUNDLE:false --sourcemap",
    "compile-standalone-esm": "rollup --config --environment ESM:true,BUNDLE:false --sourcemap",
    "compile-bundle": "rollup --config --environment BUNDLE:true --sourcemap",
    "minify": "npm-run-all --aggregate-output --parallel minify-*",
    "minify-standalone": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=dist/shoe.js.map,includeSources,url=shoe.min.js.map\" --output dist/shoe.min.js dist/shoe.js",
    "minify-standalone-esm": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=dist/shoe.esm.js.map,includeSources,url=shoe.esm.min.js.map\" --output dist/shoe.esm.min.js dist/shoe.esm.js",
    "minify-bundle": "terser --compress passes=2 --mangle --comments \"/^!/\" --source-map \"content=dist/shoe.bundle.js.map,includeSources,url=shoe.bundle.min.js.map\" --output dist/shoe.bundle.min.js dist/shoe.bundle.js",
    "dist": "npm-run-all compile minify",
    "test": "jest",
    "watch": "npm-run-all --parallel watch-*",
    "watch-dist": "rollup --config --watch",
    "watch-docs": "tailwindcss -i ./site/input.css -o ./site/static/css/site.css --watch"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-node-resolve": "^13.2.1",
    "@rollup/plugin-replace": "^4.0.0",
    "@rollup/plugin-typescript": "^8.3.1",
    "@tailwindcss/typography": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-jest": "^27.5.1",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^27.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-terser": "^7.0.2",
    "tailwindcss": "^3.0.24",
    "terser": "^5.13.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5"
  }
}
